{
  "name": "convertiv/preserve-paths",
  "description": "Composer plugin for preserving custom paths and supporting nested packages",
  "type": "composer-plugin",
  "keywords": [
    "composer-plugin",
    "installer",
    "custom path",
    "nested package"
  ],
  "homepage": "https://github.com/convertiv/preserve-paths",
  "license": "GPL-2.0+",
  "authors": [{
      "name": "Johannes Haseitl",
      "email": "johannes@undpaul.de",
      "homepage": "http://www.undpaul.de"
    },
    {
      "name": "Brad Mering",
      "email": "brad@convertiv.com",
      "homepage": "http://www.convertiv.com"
    }
  ],
  "support": {
    "issues": "https://github.com/convertiv/preserve-paths/issues"
  },
  "require": {
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "composer/composer": "2.*",
    "phpunit/phpunit": "4.*",
    "derhasi/tempdirectory": "0.1.*",
    "squizlabs/php_codesniffer": "2.*",
    "escapestudios/symfony2-coding-standard": "2.*"
  },
  "autoload": {
    "psr-4": {
      "Convertiv\\PreservePaths\\": "src/"
    }
  },
  "extra": {
    "class": "Convertiv\\PreservePaths\\Plugin"
  }
}